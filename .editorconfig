# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# CSS-Files
[*.css]
indent_style = space
indent_size = 2

# JS-Files
[*.js]
indent_style = space
indent_size = 4

# JSON-Files
[package.json]
indent_style = space
indent_size = 2
